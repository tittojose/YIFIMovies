<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@android:drawable/dialog_holo_dark_frame"
    android:clickable="true"
    android:transitionName="@string/picture_transition_name">


    <ImageView
        android:id="@+id/imageViewMovieListItem"
        android:layout_width="0dp"
        android:layout_height="@dimen/movie_list_item_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/backgroundColor" />


    <TextView
        android:id="@+id/tvTitleMovieListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F3030"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lines="2"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="#F7F8F7"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovieListItem" />

    <TextView
        android:id="@+id/tvRatingMovieListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/circular_text"
        android:elevation="2dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="8"
        android:textColor="#FFFEFD"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>